.Chat-main__message-box{data: {message: {id: message.id}}}
  .Chat-main__message-info
    .Chat-main__poster-name
      = message.user.name
    .Chat-main__message-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Chat-main__message-text
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Chat-main__image' if message.image.present?

      